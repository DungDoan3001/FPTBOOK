@model TimpusProject.ModelView.BuyVM
@{
    ViewData["Title"] = "Index Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TimpusProject.ModelView.CartItem> Carts = ViewBag.Cart;
}

@section Styles{
<style type="text/css">
    .nice-select .list{
        border-radius: 0px;
        overflow-y: auto;
        overflow:hidden;
        max-height:200px;
        overflow-y: scroll;
    }
    .nice-select .option:hover, .nice-select .option.focus, .nice-select .option.selected.focus{
        color:red;
        background:none;
    }
</style>
}




<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/assets/images/banner/2-1-1920x523.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">PURCHASE INFORMATION</h2>
                        <ul>
                            <li>
                                <a href="/">Home<i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>PURCHASE INFORMATION</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="checkout-area section-space-y-axis-100">
        <div class="container">
            <form asp-controller="Checkout" asp-action="Index" method="post">
                <input hidden asp-for="CustomerId" />
                <div class="row">
                    <div class="col-lg-6 col-12">

                        <div class="checkbox-form">
                            <h3>ORDER INFORMATION</h3>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Full name:</label>
                                        <input asp-for="FullName" placeholder="Full name" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Phone number<span class="required">*:</span></label>
                                        <input asp-for="Phone" placeholder="Phone number" type="text">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="checkout-form-list">
                                        <label>Delivery address<span class="required">*:</span></label>
                                        <input asp-for="Address" placeholder="Delivery address" type="text">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <div class="your-order">
                            <h3>ORDER INFORMATION</h3>
                            <div class="your-order-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="cart-product-name">PRODUCTS</th>
                                            <th class="cart-product-total">PRICE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Carts.Count() > 0)
                                        {
                                            foreach (var item in Carts)
                                            {
                                                <tr class="cart_item">
                                                    <td class="cart-product-name">
                                                        @item.product.ProductName<strong class="product-quantity">
                                                            × @item.amount
                                                        </strong>
                                                    </td>
                                                    <td class="cart-product-total"><span class="amount">@item.TotalMoney.ToString("#,###") $</span></td>
                                                </tr>
                                            }
                                        } 
                                        else
                                        {
                                            <p>Carts empty</p>
                                        }

                                        
                                    </tbody>
                                    <tfoot>
                                        <tr class="order-total">
                                            <th>TỔNG ĐƠN HÀNG</th>
                                            <td><strong><span class="amount">@Carts.Sum(x => x.TotalMoney).ToString("#,##0") $</span></strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <h5 style="color:red">Please choose a payment method</h5>
                            <div class="payment-method">
                                <div class="payment-accordion">
                                    <div id="accordion">
                                        <div class="card">
                                            <div class="card-header" id="#payment-1">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true">
                                                        Cash on Delivery (COD)
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>
                                                        Customers will pay when receiving goods
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="#payment-2">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="collapsed" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false">
                                                        Bank
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>
                                                        Information of bank's account
                                                    </p>
                                                    <p>Account holder: Bui Cong Thuan</p>
                                                    <p>Account number: 0999999999 - VietcomBank</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="#payment-3">
                                                <h5 class="panel-title">
                                                    <a href="javascript:void(0)" class="collapsed" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false">
                                                        Payment via MOMO
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseThree" class="collapse" data-bs-parent="#accordion">
                                                <div class="card-body">
                                                    <p>MOMO information:</p>
                                                    <p>Account holder: Bui Cong Thuan</p>
                                                    <p>Account number: 0999999999 - VietcomBank</p>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="order-button-payment">
                                        <input value="ORDER CONFIRMATION" type="submit">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
</main>

