
@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner -->
    <section class="bg-success py-5">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-md-8 text-white">
                    <h1>About Us</h1>
                    <p>
                        FPTBook is a web-based software system to aid book store customers and owners to 
                        manage their book purchases and sales about simplifying and speeding up the process of 
                        selection, ordering, and purchasing books for customers as well as managing a database 
                        of users and a database of products for book store owners.
                    </p>
                </div>
                <div class="col-md-4">
                    <img src="~/assets/img/about-hero.png" alt="About Hero">
                </div>
            </div>
        </div>
    </section>
