@model TimpusProject.ModelView.ChangePasswordVM

<form asp-controller="Accounts" asp-action="ChangePassword" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Your Current password:</label>
    <input asp-for="PasswordNow" type="password">
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">New password</label>
    <input asp-for="Password" type="password">
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Confirm new Password</label>
    <input asp-for="ConfirmPassword" type="password">
  </div>
  <button type="submit" class="btn btn-primary">Save changes</button>
</form>
