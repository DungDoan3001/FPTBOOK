                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>*@
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

@section Scripts{
<script>
    $(document).ready(function () {
        $(".xemdonhang").click(function () {
            var madonhang = $(this).attr("data-madonhang")
            $.ajax({
                url: '/Orders/Details',
                datatype: "json",
                type: "POST",
                data: { id: madonhang },
                async: true,
                success: function (results) {
                    $("#records_table").html("");
                    $("#records_table").html(results);
                },
                error: function (xhr) {
                    alert(xhr.responseText);
                }
            });
        });
    });
</script>
}