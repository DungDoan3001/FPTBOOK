@model List<TimpusProject.ModelView.CartItem>

@if(Model != null && Model.Count() > 0)
{
    <a class="nav-icon position-relative text-decoration-none" href="cart.html">
    <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
    <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark">@Model.Count()</span>
</a>
} 
else
{
    <a class="nav-icon position-relative text-decoration-none" href="cart.html">
    <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
    <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
</a>
}