@model TimpusProject.Models.Product

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Open Content -->
<section class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@Model.Thumb" alt="Card image cap" id="product-detail">
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@Model.ProductName</h1>
                        <p class="h3 py-2">$ @Model.Price</p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>ISBN:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>#@Model.Isbn</strong></p>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Category:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Cat.CatName</strong></p>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Publisher:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Publisher.FullName</strong></p>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Author:</h6>
                            </li>
                            @for (int i = 0; i < ViewBag.Authors.Count; i++)
                            {
                                <li class="list-inline-item">
                                    <img src="@ViewBag.Authors[i].Author.Avatar" class="rounded-circle" style="width: 50px;"
                                     alt="Avatar" data-bs-toggle="tooltip" data-bs-placement="top" title="@ViewBag.Authors[i].Author.AuthorName" />
                                </li>
                            }
                        </ul>

                        

                        <form action="" method="GET">
                            <input type="hidden" name="product-title" value="Activewear">
                            <div class="row">
                                <div class="col-auto">
                                    <ul class="list-inline pb-3 mt-3">
                                        <li class="list-inline-item text-right">
                                            <h6>Quantity</h6>
                                            <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                        <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <button type="submit" class="btn btn-success btn-lg" name="submit" value="addtocard">Add To Cart</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container pb-5">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h6>Description:</h6>
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Close Content -->
