@model IEnumerable<TimpusProject.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h2 class="header-title">Products</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="#">Products Management</a>
            <span class="breadcrumb-item active">Products</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <select class="custom-select" style="min-width: 180px;" id="txtCatId" name="txtCatId" asp-items="ViewBag.CatId">
                            <option selected disabled>Catergory</option>
                            <option value="0">All</option>
                        </select>
                    </div>
                    <div class="m-b-10">
                        <select class="custom-select" style="min-width: 180px;" id="txtActive" name="txtActive" asp-items="ViewBag.Active">
                            <option selected disabled>Status</option>
                            <option value="0">All</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a asp-area="Admin" asp-action="Create" asp-controller="Products">
                    <button class="btn btn-primary btn-tone">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add Product</span>
                    </button>
                </a>
            </div>
        </div>
        <table id="data-table" class="table text-ceneter">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Stock Left</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int tableIndex = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            @{
                                tableIndex += 1;
                            }
                            <td>@tableIndex</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img class="img-fluid rounded" src="@item.Thumb" style="max-width: 60px" alt="@item.ProductName">
                                    <h6 class="m-b-0 m-l-10">@item.ProductName</h6>
                                </div>
                            </td>
                            <td>@item.Cat.CatName</td>
                            <td>@item.UnitInStock</td>
                            @if (item.Active != false)
                            {
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-success badge-dot m-r-10"></div>
                                        <div>Active</div>
                                    </div>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="badge badge-danger badge-dot m-r-10"></div>
                                        <div>Disabled</div>
                                    </div>
                                </td>
                            }
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProductId">
                                    <div class="m-r-5 btn btn-icon btn-hover btn-tone btn-primary btn-rounded" data-toggle="tooltip" data-placement="top" title="View details">
                                        <i class="anticon anticon-eye"></i>
                                    </div>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ProductId">
                                    <div class="m-r-5 btn btn-icon btn-hover btn-tone btn-success btn-rounded" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="anticon anticon-edit"></i>
                                    </div>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId">
                                    <div class="m-r-5 btn btn-icon btn-hover btn-tone btn-danger btn-rounded" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="anticon anticon-close-circle"></i>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Stock Left</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>





@section Scripts {
    <script>
        $('#data-table').DataTable();

        $(document).ready(function() {
            jQuery("#txtCatId").change(function() {
                var catId = jQuery(this).children(":selected").attr("value");
                var isActive = jQuery('#txtActive').children(":selected").attr("value");
                isActive = parseFloat(isActive);
                catId = parseFloat(catId);
                $('#txtCatId option')
                    .removeAttr('selected');
                $("#txtCatId > [value=" + catId + "]").attr("selected", "true");

                $.ajax({
                    url: '/Admin/Products/Filtter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        CatId: catId,
                        Active: isActive
                    },
                    async: true,
                    success: function(results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function(xhr) {
                        alert('error');
                    }
                });
            });
            jQuery("#txtActive").change(function() {
                var isActive = jQuery(this).children(":selected").attr("value");
                var catId = jQuery('#txtCatId').children(":selected").attr("value");
                isActive = parseFloat(isActive);
                catId = parseFloat(catId);
                $('#txtActive option')
                    .removeAttr('selected');
                $("#txtActive > [value=" + isActive + "]").attr("selected", "true");

                $.ajax({
                    url: '/Admin/Products/Filtter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        CatId: catId,
                        Active: isActive
                    },
                    async: true,
                    success: function(results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function(xhr) {
                        alert('error');
                    }
                });
            });
        });
    </script>
}
