@model TimpusProject.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <h2 class="header-title">Create new customer account</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a href="javascript:void(0)" class="breadcrumb-item">Accounts Management</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Customers" asp-action="Index">Customer accounts</a>
            <span class="breadcrumb-item active">Create new customer account</span>
        </nav>
    </div>
</div>

<a asp-action="index"><p class="h6 font-weight-light text-primary"><i class="anticon anticon-arrow-left"></i> Back to customer accounts</p></a>


<div class="container">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="tab-account">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Basic User's Information</h4>
                </div>
                <div class="card-body">
                    <div class="media align-items-center">
                        <div class="avatar avatar-image  m-h-10 m-r-15" style="height: 80px; width: 80px">
                            <img src="~/admin_assets/images/avatars/thumb-1.jpg" id="ImgPreview" alt="">
                        </div>
                        <div class="m-l-20 m-r-20">
                            <h5 class="m-b-5 font-size-18">Change Avatar</h5>
                            <p class="opacity-07 font-size-13 m-b-0">
                                Recommended Dimensions: <br>
                                120x120 Max fil size: 5MB
                            </p>
                        </div>
                        <div>
                            <label class="btn btn-tone btn-primary">
                                <input type="file" id="UploadImg" name="myImage" accept="image/png, image/gif, image/jpeg" style="display:none" />
                                Upload
                            </label>
                        </div>
                    </div>

                    <hr class="m-v-25">

                    <form asp-action="Create" id="form-validation">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Avatar" class="control-label"></label>
                            <input asp-for="Avatar" value="~/admin_assets/images/avatars/thumb-1.jpg" id="b64Img" class="form-control" readonly />
                            <span asp-validation-for="Avatar" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-5">
                                <label asp-for="FullName" class="font-weight-semibold control-label">Full name:</label>
                                <input asp-for="FullName" class="form-control" placeholder="Ex: John Doe" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Email" class="font-weight-semibold control-label">Email:</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="Username" class="font-weight-semibold control-label">Username</label>
                                <div class="inpput-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">&#64;</span>
                                        <input asp-for="Username" class="form-control" placeholder="Username" aria-placeholder="JohnDoe"
                                               aria-describedby="basic-addon1" required />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="Phone" class="font-weight-semibold control-label">Phone number:</label>
                                <input asp-for="Phone" pattern="[096|097|098|032|033|034|035|036|037|038|039|088|091|094|083|084|085|081|082|089|090|093|070|077|076|078|092|056|058]{3}[0-9]{7}" id="phoneNumber" placeholder="09xx-xxx-xxx || 01xx-xxx-xxx" class="form-control" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Address" class="font-weight-semibold control-label">Address:</label>
                                <input asp-for="Address" id="phoneNumber" placeholder="Address" class="form-control" required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="CreateDate" class="font-weight-semibold control-label">Created date:</label>
                                <input asp-for="CreateDate" type="date" value="" id="set-today" class="form-control" readonly />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="LastLogin" class="font-weight-semibold control-label">Last login:</label>
                                <input asp-for="LastLogin" class="form-control" readonly />
                                <span asp-validation-for="LastLogin" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="font-weight-semibold" asp-for="Active" class="control-label"></label>
                                <select asp-for="Active" class="form-control">
                                    <option selected value="True">True</option>
                                    <option value="False">False</option>
                                </select>
                                <span asp-validation-for="Active" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" id="newPassword" type="password" name="inputPassword" class="form-control" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="control-label">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword" name="inputPasswordConfirm" placeholder="Enter the password again" required />
                            </div>

                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn btn-warning m-l-30" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Change Password</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label class="font-weight-semibold" for="oldPassword">Old Password:</label>
                                <input type="password" class="form-control" id="oldPassword" placeholder="Old Password">
                            </div>
                            <div class="form-group col-md-3">
                                <label class="font-weight-semibold" for="newPassword">New Password:</label>
                                <input type="password" class="form-control" id="newPassword" placeholder="New Password">
                            </div>
                            <div class="form-group col-md-3">
                                <label class="font-weight-semibold" for="confirmPassword">Confirm Password:</label>
                                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                            </div>
                            <div class="form-group col-md-3">
                                <button class="btn btn-primary m-t-30">Change</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script>
        $("#form-validation").validate({
            ignore: ':hidden:not(:checkbox)',
            errorElement: 'label',
            errorClass: 'is-invalid',
            validClass: 'is-valid',
            rules: {
                inputPassword: {
                    required: true
                },
                inputPasswordConfirm: {
                    required: true,
                    equalTo: '#newPassword'
                }
            }
        });
    </script>
}

